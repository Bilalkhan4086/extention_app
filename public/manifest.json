{
	"name": "Save All Resources",
	"version": "1.0",
	"description": "UP - Save all resources files with retaining folder structure.",
	"icons": {
    "128": "logo192.png"
	},
	"action": {
    "default_icon": "logo192.png",
		"default_title": "UP",
		"default_popup": "index.html"
  },
	"permissions": [
		"tabs",
		"downloads",
		"downloads.shelf",
    "activeTab", 
    "scripting"
	],
  "host_permissions":[
    "http://*/",
    "https://*/"
  ],
	"devtools_page": "devtool.html",
	"manifest_version": 3
}